    "version": "2.0.0",
    "tasks": [
        {
            "label": "gotest",
            "type": "shell",
            "command": "go test ./...",
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "problemMatcher": ["$go"],
            "presentation": {
                "focus": true,
                "panel": "new"
            }
        },
        {
            "label": "build",
            "type": "shell",
            "command": "go build",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$go"],
            "presentation": {
                "focus": true,
                "panel": "new"
            }
        },
        {
            "label": "build ARM",
            "type": "shell",
            "command": "env GOOS=linux GOARCH=arm GOARM=7 go build",
            "problemMatcher": ["$go"],
            "presentation": {
                "focus": true,
                "panel": "new"
            }
        }
    ]
}